{
  "compilerOptions": {
    /* Language and Environment */
    "target": "ES2015",

    /* Modules */
    "module": "commonjs",
    "rootDir": "./src",
    "baseUrl": "./",

    /* JavaScript Support */
    "allowJs": true,

    /* Emit */
    "declaration": true,
    "declarationMap": true,
    "outDir": "./dist",

    /* Interop Constraints */
    "isolatedModules": true,
    "esModuleInterop": true,

    /* Type Checking */
    "strict": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "skipLibCheck": true
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}
